<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:columnCount="3"
    android:orientation="horizontal"
    android:padding="16dp"
    android:rowCount="1">

    <GridLayout
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_gravity="left"
        android:background="@drawable/image_border"
        android:columnCount="1"
        android:maxWidth="75dp"
        android:orientation="vertical"
        android:rowCount="1">

        <ImageView
            android:id="@+id/imageProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="center|center_horizontal"
            android:adjustViewBounds="true"
            android:contentDescription="@string/contentImageDesc"
            android:padding="4dp"
            android:scaleType="fitXY"
            android:src="@drawable/noimage" />

    </GridLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_columnSpan="2"
        android:columnCount="2"
        android:minHeight="75dp"
        android:orientation="vertical"
        android:rowCount="2"
        android:layout_gravity="left">

        <TextView
            android:id="@+id/txtProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="5dp"
            android:gravity="center_vertical"
            android:text="MainTitle"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="5dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:gravity="center_vertical"
            android:text="@string/lblEmptyPrice"
            android:textColor="#673AB7"
            android:textSize="18sp" />

    </GridLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:layout_row="0"
        android:layout_column="2"
        android:layout_gravity="right"
        android:columnCount="2"
        android:orientation="vertical"
        android:rowCount="1">

        <Button
            android:id="@+id/btnEdit"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="bottom|center|center_horizontal"
            android:layout_marginEnd="6dp"
            android:backgroundTint="@color/colorSuccess"
            android:drawableLeft="@drawable/ic_edit_white_24dp"
            android:gravity="center_horizontal"
            android:insetLeft="6dp"
            android:insetRight="6dp"
            android:textColor="@android:color/white"
            app:iconPadding="0dp"
            app:iconSize="18sp" />

        <Button
            android:id="@+id/btnDelete"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_gravity="bottom|center|center_horizontal"
            android:backgroundTint="@color/colorDanger"
            android:drawableLeft="@drawable/ic_delete_white_24dp"
            android:gravity="center|center_horizontal"
            android:insetLeft="6dp"
            android:insetRight="6dp"
            android:textColor="@android:color/white"
            app:iconPadding="0dp"
            app:iconSize="18sp" />

    </GridLayout>
</GridLayout>