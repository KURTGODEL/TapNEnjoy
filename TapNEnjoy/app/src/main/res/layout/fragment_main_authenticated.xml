<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layout"
    android:backgroundTint="@color/colorPrimaryLight"
    android:backgroundTintMode="multiply"
    android:isScrollContainer="false"
    tools:context=".MainAuthenticatedFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="40dp"
            android:columnCount="2"
            android:orientation="horizontal"
            android:rowCount="1">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txtMainSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_gravity="fill|fill_horizontal"
                android:layout_weight=".70"
                android:gravity="fill|fill_horizontal"
                android:hint="@string/lblSearch">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="fill|fill_horizontal"
                    android:gravity="fill|fill_horizontal"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/btnSearch"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_gravity="fill_vertical"
                android:layout_marginStart="10dp"
                android:drawableLeft="@drawable/search"
                android:layout_weight=".30"
                android:gravity="fill_vertical" />

        </GridLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:columnCount="1"
            android:rowCount="5">

            <Button
                android:id="@+id/btnMyOrders"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/ic_playlist_add_check_white_24dp"
                android:text="@string/lblBtnMyOrders"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnWatchList"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/ic_favorite_white_24dp"
                android:text="@string/lblBtnWatchList"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnMyOffers"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/ic_label_white_24dp"
                android:text="@string/lblBtnMyOffers"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnStartShopping"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_row="3"
                android:layout_column="0"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/ic_shopping_cart_white_24dp"
                android:text="@string/lblBtnStartShopping"
                android:textSize="20sp" />
        </GridLayout>

    </LinearLayout>

</ScrollView>