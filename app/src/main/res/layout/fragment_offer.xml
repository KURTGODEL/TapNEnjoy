<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layout"
    android:backgroundTint="@color/colorPrimaryLight"
    android:backgroundTintMode="multiply"
    android:isScrollContainer="false"
    tools:context=".MakeOfferFragment">

    <GridLayout
        android:id="@+id/grid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:columnCount="1"
        android:rowCount="9">

        <TextView
            android:id="@+id/txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="center|center_horizontal"
            android:layout_margin="25dp"
            android:text="MAKE YOUR OFFER"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/productimage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_gravity="center|center_horizontal"
            android:layout_marginTop="20dp"
            android:adjustViewBounds="true"
            android:cropToPadding="false"
            android:maxHeight="130dp"
            android:minHeight="130dp"
            android:scaleType="fitXY"
            android:src="@drawable/noimage" />

        <TextView
            android:id="@+id/offer_product_name"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_below="@+id/txt"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="60dp"
            android:layout_marginRight="20dp"
            android:layout_gravity="center|center_horizontal"
            android:hint="Product Name"
            android:textAlignment="center"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/offer_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_below="@+id/offer_product_name"
            android:layout_gravity="center|center_horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:inputType="number"
            android:layout_marginRight="20dp"
            android:hint="Offer Number"
            />

        <EditText
            android:id="@+id/offer_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_below="@+id/offer_number"
            android:layout_gravity="center|center_horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:hint="Offer Price"
            />
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/offer_reason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="5"
            android:layout_column="0"
            android:layout_below="@+id/offer_price"
            android:layout_gravity="center|center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:hint="Offer Reason"
            app:errorEnabled="true">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txt_offerreason"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine" />
        </com.google.android.material.textfield.TextInputLayout>



        <Button
            android:id="@+id/send_offer_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="6"
            android:layout_column="0"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/offer_reason"
            android:layout_gravity="center|center_horizontal"
            android:layout_margin="20dp"
            android:text="SEND"
            android:background="@color/colorPrimaryDark"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            />



        <Button
            android:id="@+id/cancel_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="7"
            android:layout_column="0"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/send_offer_btn"
            android:layout_gravity="center|center_horizontal"
            android:layout_margin="20dp"
            android:text="CANCEL"
            android:background="@color/colorPrimaryDark"
            android:textColor="@android:color/white"
            android:textSize="20dp"/>




    </GridLayout>
</ScrollView>
