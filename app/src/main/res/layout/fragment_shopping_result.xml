<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layout"
    android:backgroundTint="@color/colorPrimaryLight"
    android:backgroundTintMode="multiply"
    android:isScrollContainer="false"
    tools:context=".ShoppingResultFragment">

    <GridLayout
        android:id="@+id/grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="1"
        android:rowCount="9">

        <TextView
            android:id="@+id/txt1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:layout_row="1"
            android:layout_column="0"
            android:text="THANKS FOR YOUR ORDER"
            android:textSize="18sp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_margin="20dp"
            android:textAlignment="center"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/txt2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:text="Your Order has been successfully completed."
            android:textSize="18sp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_margin="20dp"
            android:textAlignment="center"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/shipping_information"
            android:layout_width="match_parent"
            android:layout_height="177dp"
            android:layout_rowSpan="2"
            android:layout_column="0"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="20dp"
            android:inputType="number"

            />


        <Button
            android:id="@+id/continue_shopping_btn"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_row="5"
            android:layout_column="0"
            android:layout_margin="20dp"
            android:background="@color/colorPrimaryDark"
            android:text="CONTINUE SHOPPING"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <Button
            android:id="@+id/new_search_btn"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_row="6"
            android:layout_column="0"
            android:layout_margin="20dp"
            android:background="@color/colorPrimaryDark"
            android:text="New Search"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

    </GridLayout>
</ScrollView>
